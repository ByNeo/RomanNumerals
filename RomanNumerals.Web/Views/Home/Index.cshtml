@{
    ViewBag.Title = "Roman Numerals";
}
<h2>@ViewBag.Title</h2>


<br />
<br />

<div class="panel panel-info">
    <div class="panel-heading">Roman Numerals Converter</div>
    <div class="panel-body">
        <form class="form-horizontal">
            <div class="form-group">
                <label for="lblNumber" class="col-sm-2 control-label">Number:</label>
                <div class="col-sm-10">
                    <input id="txtNumber" type="text" class="form-control" placeholder="Number">
                </div>
            </div>
            <div class="form-group">
                <label for="lblResult" class="col-sm-2 control-label">Result:</label>
                <div class="col-sm-10">
                    <label id="lblRomanResult" class="control-label">-</label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button id="btnRomanParse" class="btn btn-default" type="button">Convert</button>
                </div>
            </div>
        </form>
    </div>
</div>
<br />
<br />



@section scripts {
    <script src="@Url.Content("~/Scripts/pageViewJS/romanNumerals.js")"></script>
}